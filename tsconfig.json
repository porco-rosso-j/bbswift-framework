{
    "compilerOptions": {
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "useUnknownInCatchVariables": false,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-native",
      
      "composite": true,
      "resolveJsonModule": true,
      "outDir": "./dest",
      "rootDir": "./src",
    },
    // js files should be ts...?
    "include": ["src"],
    "exclude": [
      "babel.config.js", // Exclude babel.config.js
      "metro.config.js",
      "jest.config.js",
      "node_modules",
      "dest",    // Exclude node_modules
      "ios",             // Exclude ios folder if not needed
      "android"          // Exclude android folder if not needed
    ],
}